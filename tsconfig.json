{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": false,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "target": "es2017",
    "typeRoots": ["node_modules/@types"]
  }
}
