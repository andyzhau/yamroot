{
  "AWSEBDockerrunVersion": "2",
  "volumes": [{
      "name": "ubuntu-desktop-lxde-vnc",
      "host": {
        "sourcePath": "/var/local/ubuntu-desktop-lxde-vnc"
      }
    },
    {
      "name": "binaries",
      "host": {
        "sourcePath": "/var/app/current/binaries"
      }
    }
  ],
  "containerDefinitions": [{
    "name": "ubuntu-desktop-lxde-vnc",
    "image": "dorowu/ubuntu-desktop-lxde-vnc",
    "essential": true,
    "cpu": 1024,
    "environment": [{
      "name": "HTTP_PASSWORD",
      "value": "Asdf1234"
    }],
    "memory": 1024,
    "portMappings": [{
      "hostPort": 80,
      "containerPort": 80
    }],
    "mountPoints": [{
      "sourceVolume": "ubuntu-desktop-lxde-vnc",
      "containerPath": "/root"
    }, {
      "sourceVolume": "binaries",
      "containerPath": "/root/bin"
    }],
    "linuxParameters": {
      "sharedMemorySize": 512
    }
  }]
}
